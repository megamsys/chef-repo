#!upstart
description "Megam_snowflake"
author      "Megam Systems"

start on startup
stop on shutdown

script
    export HOME="/root"

    echo $$ > /var/run/redis.pid
    exec sudo -u redis /usr/bin/redis-server >> /var/log/upstart/redis.log 2>&1

end script

pre-start script
    # Date format same as (new Date()).toISOString() for consistency
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Starting" >> /var/log/upstart/redis.log 
end script

pre-stop script
    rm /var/run/redis.pid
    echo "[`date -u +%Y-%m-%dT%T.%3NZ`] (sys) Stopping" >> /var/log/upstart/redis.log 
end script

